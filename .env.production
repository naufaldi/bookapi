# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Domain
DOMAIN=book-api.faldi.xyz

# Database Password (generate: openssl rand -base64 24)
DB_PASSWORD=change-this-to-secure-password

# App Configuration
APP_ADDR=:8080
# DB_DSN will be auto-constructed: postgres://bookapi:${DB_PASSWORD}@db:5432/bookapi
DB_DSN=postgres://bookapi:${DB_PASSWORD}@db:5432/bookapi

# JWT Secret (generate: openssl rand -base64 32)
JWT_SECRET=change-this-to-secure-jwt-secret-at-least-32-characters

# CORS
ALLOWED_ORIGINS=https://book-api.faldi.xyz

# Security
MAX_REQUEST_SIZE_MB=1
ENABLE_HSTS=true
